{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "sourceRoot": "/",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "types": [ "vitest", "node"]
  },
  "exclude": ["node_modules", ".next", "out", "build", "**/*.test.ts*"],
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "src/*",
    "index.d.ts",
    ".next/types/**/*.ts",
    "vitest.config.js"
  ]
}
