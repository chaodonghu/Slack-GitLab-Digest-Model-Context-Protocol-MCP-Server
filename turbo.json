{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env"],
  "globalDotEnv": [".env", ".env.local"],
  "globalEnv": ["NODE_ENV", "VERCEL_ENV", "VERCEL_URL", "PORT"],
  "pipeline": {
    "validate": {
      "dependsOn": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "service#build": {
      "outputs": [".next/**"],
      "env": [
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_COMMIT_SHA"
      ]
    },
    "typecheck": {
      "dependsOn": [],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "test": {
      "dependsOn": [],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "test:coverage": {
      "outputs": ["coverage/*.json"]
    },
    "lint": {
      "outputs": [],
      "env": [
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_COMMIT_SHA",
        "PORT"
      ]
    },
    "service#lint": {
      "env": [
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_COMMIT_SHA"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": []
    }
  }
}

