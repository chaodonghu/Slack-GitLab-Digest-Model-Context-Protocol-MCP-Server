{
  "private": true,
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "name": "zhwdailysummarizer-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for retriving slack activity, gitlab activity, and summarizing them",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node index.ts",
    "inspect": "npx @modelcontextprotocol/inspector ts-node index.ts",
    "lint": "turbo run lint",
    "start": "ts-node index.ts",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write '**/*.{js,ts,tsx}'"
  },
  "keywords": [
    "slack",
    "summarizer",
    "mcp",
    "model-context-protocol",
    "gitlab"
  ],
  "author": "Dong Hu <dong.hu@zapier.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.2",
    "@slack/web-api": "^6.9.0",
    "@types/cors": "^2.8.18",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "openai": "^4.98.0",
    "graphql-request": "^7.1.2"
  },
  "devDependencies": {
    "junit-merge": "^2.0.0",
    "prettier": "^3.2.5",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.17",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.10",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "turbo": "^1.12.5"
  }
}
